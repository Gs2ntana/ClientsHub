@model FornecedorModel
@{
    ViewData["Title"] = "Confirmação apagar Fornecedor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-success btn-block" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Fornecedor" asp-action="Apagar" asp-route-id="@Model.ID">Confirmar exclusão</a>