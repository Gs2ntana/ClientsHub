@model FornecedorModel
@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="text-center">
    <h1 class="display-4">Editar Fornecedor existente</h1>
</div>

<form asp-controller="Fornecedor" asp-action="Alterar" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" asp-for="Nome" class="form-control" name="Nome" maxlength="100" required placeholder="Insira o nome do fornecedor">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="nome">CNPJ:</label>
        <input type="text" asp-for="CNPJ" class="form-control" name="CNPJ" pattern="\d{14}" maxlength="14" required placeholder="Insira o CNPJ (apenas números)">
        @Html.ValidationMessageFor(x => x.CNPJ)
    </div>

    <div class="form-group">
        <label for="nome">Segmento:</label>
        <select type="text" asp-for="Segmento" class="form-control" name="Segmento" required>
            <option value="Comércio">Comércio</option>
            <option value="Serviço">Serviço</option>
            <option value="Indústria">Indústria</option>
        </select>
    </div>

    <div class="form-group">
        <label for="nome">CEP:</label>
        <input type="text" asp-for="CEP" class="form-control" name="CEP" pattern="\d{8}" maxlength="8" required placeholder="Insira o CEP (apenas números)">
        @Html.ValidationMessageFor(x => x.CEP)
    </div>

    <div class="form-group">
        <label for="nome">Endereço:</label>
        <input type="text" asp-for="Endereco" class="form-control" name="Endereco" maxlength="255" readonly>
    </div>

    <div class="form-group">
        <label for="foto">Foto:</label>
        <input type="file" asp-for="Foto" accept="png" class="form-control" />
        @Html.ValidationMessageFor(x => x.Foto, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Fornecedor" asp-action="Index" role="button">Voltar</a>
</form>